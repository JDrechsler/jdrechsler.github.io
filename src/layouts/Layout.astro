---
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Johannes Drechsler - Full-Stack Software Engineer with a passion for delivering high-quality, performant, and accessible user experiences."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="p-0 m-0 background text-[#2f3447]">
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  .background {
    background-color: #fbf6ef;
    background-image: radial-gradient(
        60rem 30rem at 20% -10%,
        rgba(255, 210, 182, 0.55),
        transparent 60%
      ),
      radial-gradient(
        60rem 34rem at 90% 15%,
        rgba(255, 199, 160, 0.35),
        transparent 60%
      ),
      radial-gradient(
        48rem 28rem at 70% 75%,
        rgba(255, 224, 196, 0.4),
        transparent 60%
      ),
      linear-gradient(180deg, #fdf9f4 0%, #f7f1e9 65%, #fdf9f4 100%);
    background-attachment: fixed;
  }
</style>
