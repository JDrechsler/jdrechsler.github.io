---
import Nav from '../components/Nav.html'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Johannes Drechsler - Full-Stack Software Engineer with a passion for delivering high-quality, performant, and accessible user experiences."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="p-0 m-0 animated-gradient noise-overlay min-h-screen">
    <!-- Decorative blobs -->
    <div class="blob blob-primary w-96 h-96 -top-48 -right-48 fixed opacity-20"></div>
    <div class="blob blob-sage w-80 h-80 top-1/2 -left-40 fixed opacity-15"></div>
    <div class="blob blob-accent w-64 h-64 bottom-20 right-1/4 fixed opacity-10"></div>

    <div class="relative z-10">
      <Nav />
      <slot />
      <Footer />
    </div>
  </body>
</html>
